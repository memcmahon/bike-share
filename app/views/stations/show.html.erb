<div class="container trips">

  <h1>Station Details</h1>

  <div class="panel">
    <ul>
      <li>Name:              <%= @station.name %></li>
      <li>Lat:               <%= @station.lat %></li>
      <li>Long:              <%= @station.long %></li>
      <li>Dock Count:        <%= @station.dock_count %></li>
      <li>City:              <%= @station.city %></li>
      <li>Installation Date: <%= @station.installation_date %></li>
    </ul>

    <% if current_user && current_user.admin? %>
      <%= link_to "delete", station_path(@station.name), method: "delete", data: {confirm: "Are you sure you want to delete this station?"} %>
      <%= link_to "edit", edit_station_path(@station.slug) %>
    <% end %>
  </div>
</div>