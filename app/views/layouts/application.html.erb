<!DOCTYPE html>
<html>
  <head>
    <title>BikeShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed" rel="stylesheet">
  </head>

  <body>
    <nav class="navbar navbar-inverse fixed-top flex-row">
      <a href="/" class="navbar-brand"><i class="fa fa-bicycle"></i></a>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to "Trips", trips_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Stations", stations_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Conditions", conditions_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "Bike Shop", accessories_path, class: 'nav-link' %>
        </li>
      </ul>
        <ul class="navbar-nav mr-auto">
          <% if current_user %>
            <li class="nav-item">
              <%= link_to 'Log Out', logout_path, method: :delete, class: 'nav-link' %>
              <li><a href="/"><i class="glyphicon glyphicon-shopping-cart"></i></a></li>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Log In", login_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
    </nav>
    <%- flash.each do |type, message| %>
    <p class="flash"><%= type %>: <%= message %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
